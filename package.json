{
  "name": "@goit-fullstack-final-project/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "serve:frontend": "nx run frontend:serve --configuration=development",
    "serve:backend": "nx run backend:serve --configuration=development",
    "serve:backend:production": "nx run backend:serve --configuration=production",
    "lint:affected": "nx affected:lint --fix",
    "build:affected": "nx affected:build",
    "test:affected": "nx affected:test",
    "e2e:affected": "nx affected:e2e",
    "lint:all": "nx run-many --target=lint --all --parallel",
    "build:all": "nx run-many --target=build --all --parallel",
    "test:all": "nx run-many --target=test --all --parallel",
    "e2e:all": "nx run-many --target=e2e --all --parallel",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "services:start": "docker compose -f docker-compose.dev.yml --env-file apps/backend/.env.serve.development.local up -d",
    "services:stop": "docker compose -f docker-compose.dev.yml --env-file apps/backend/.env.serve.development.local down",
    "seed:db": "nx run backend:seed --configuration=development",
    "uninstall": "rm -rf node_modules apps/*/node_modules libs/*/node_modules || true",
    "reinstall": "pnpm run uninstall && pnpm install",
    "prepare": "is-ci || husky"
  },
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@nx/devkit": "20.6.0",
